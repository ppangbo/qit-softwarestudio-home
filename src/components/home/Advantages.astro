---
import SectionHeader from "../home/SectionHeader.astro";
import AdvantageItem from "./advantages/AdvantageItem.astro";

// 优势数据
const advantages = [
  {
    title: "专业指导团队",
    description:
      "由经验丰富的教师和行业专家组成，提供专业的技术指导和项目管理。",
    icon: `<svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-primary"
    >
      <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
      <circle cx="9" cy="7" r="4"></circle>
      <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
      <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
    </svg>`,
  },
  {
    title: "技术多样性",
    description: "掌握多种编程语言和开发框架，能够应对不同类型的项目需求。",
    icon: `<svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-primary"
    >
      <path d="M12 2v4"></path>
      <path d="m4.93 10.93 2.83-2.83"></path>
      <path d="M2 18h4"></path>
      <path d="m19.07 10.93-2.83-2.83"></path>
      <path d="M18 18h4"></path>
      <path d="m14.83 14.83 2.83 2.83"></path>
      <path d="M12 18v4"></path>
      <path d="m6.34 17.66 2.83-2.83"></path>
      <circle cx="12" cy="12" r="3"></circle>
    </svg>`,
  },
  {
    title: "项目经验",
    description: "成功完成多个实际项目，积累了丰富的开发和项目管理经验。",
    icon: `<svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-primary"
    >
      <path d="M2 20h.01"></path>
      <path d="M7 20v-4"></path>
      <path d="M12 20v-8"></path>
      <path d="M17 20V8"></path>
      <path d="M22 4v16"></path>
    </svg>`,
  },
  {
    title: "创新思维",
    description: "鼓励创新思维和解决问题的能力，培养学生的创造力和批判性思维。",
    icon: `<svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-primary"
    >
      <path
        d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 1 1-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 0 0 2.5 2.5z"
      ></path>
    </svg>`,
  },
];
---

<!-- 团队优势 -->
<section id="advantages" class="py-16 pt-24 md:pt-28">
  <div class="container mx-auto px-4 md:px-6">
    <SectionHeader
      title="团队优势"
      description="我们拥有专业的指导团队和丰富的项目经验"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        advantages.map((advantage) => (
          <AdvantageItem
            title={advantage.title}
            description={advantage.description}
            icon={advantage.icon}
          />
        ))
      }
    </div>
  </div>
</section>
