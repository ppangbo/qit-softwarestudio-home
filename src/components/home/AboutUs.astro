---
import SectionHeader from "../home/SectionHeader.astro";
import StudioCard from "./about/StudioCard.astro";

// 工作室数据
const studios = [
  {
    title: "软件开发工作室",
    description: "立足于云原生时代，专注软件开发系统性解决方案",
    icon: `<svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-primary"
    >
      <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
      <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
    </svg>`,
  },
  {
    title: "数字媒体工作室",
    description: "致力于数字媒体技术的创新和应用，提供高质量的数字媒体解决方案",
    icon: `<svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-primary"
    >
      <path d="M17 6.1H3"></path>
      <path d="M21 12.1H3"></path>
      <path d="M15.1 18H3"></path>
    </svg>`,
  },
  {
    title: "算法工作室",
    description: "致力于算法技术的创新和应用，助力学校赛事与科研工作",
    icon: `<svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-primary"
    >
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path>
    </svg>`,
  },
];
---

<section id="about" class="bg-card/50 py-16 pt-24 md:pt-28">
  <div class="container mx-auto px-4 md:px-6">
    <SectionHeader
      title="关于我们"
      description="齐鲁理工学院软件开发工作室致力于提升同学们的技术能力和创新能力"
    />
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        studios.map((studio) => (
          <StudioCard
            title={studio.title}
            description={studio.description}
            icon={studio.icon}
          />
        ))
      }
    </div>
  </div>
</section>
<style>
  #about, #about * {
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    cursor: pointer; /* 添加小手效果 */
  }
</style>
